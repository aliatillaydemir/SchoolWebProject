@model SchoolProject.Models.Teacher

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Teacher</h2>

<h3>Are you sure you want to delete this teacher?</h3>

<div>
    <h4>Teacher</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.TeacherId)</dt>
        <dd>@Html.DisplayFor(model => model.TeacherId)</dd>
        <dt>@Html.DisplayNameFor(model => model.TeacherName)</dt>
        <dd>@Html.DisplayFor(model => model.TeacherName)</dd>
        <dt>Course</dt>
        <dd>
            @if (Model.Course != null)
            {
                if ((bool)Model.Course.IsDeleted)
                {
                    <span>No Course Assigned</span>
                }
                else
                {
                    @Model.Course.CourseName
                }
            }
            else
            {
                <span>No Course Assigned</span>
            }
        </dd>
        <dt>@Html.DisplayNameFor(model => model.IsActive)</dt>
        <dd>@Html.DisplayFor(model => model.IsActive)</dd>
        <dt>@Html.DisplayNameFor(model => model.CreatedDate)</dt>
        <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>
        <dt>@Html.DisplayNameFor(model => model.DeletedDate)</dt>
        <dd>@Html.DisplayFor(model => model.DeletedDate)</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Teachers", new { id = Model.TeacherId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
    </div>
}
