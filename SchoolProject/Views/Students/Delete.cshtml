@model SchoolProject.Models.Student

@{
    ViewBag.Title = "Delete Student";
}

<h2>Delete Student</h2>

<div>
    <h4>Are you sure you want to delete this student?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudentId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd>
            @(Model.IsActive == true ? "Yes" : "No")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd>
            @(Model.IsDeleted == true ? "Yes" : "No")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd>
            @(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("yyyy-MM-dd HH:mm:ss") : "N/A")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd>
            @(Model.UpdatedDate.HasValue ? Model.UpdatedDate.Value.ToString("yyyy-MM-dd HH:mm:ss") : "N/A")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DeletedDate)
        </dt>
        <dd>
            @(Model.DeletedDate.HasValue ? Model.DeletedDate.Value.ToString("yyyy-MM-dd HH:mm:ss") : "N/A")
        </dd>
    </dl>
</div>

<form action="@Url.Action("Delete", new { id = Model.StudentId })" method="post">
    @Html.AntiForgeryToken()
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
